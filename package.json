        "deploy": "webpack --mode production && sam deploy --config-file samconfig.local.toml --no-confirm-changeset --parameter-overrides environment=testing --tags createdBy='Nsanda'",
        "deploy:prod": "webpack --mode production && sam deploy --config-file samconfig.prod.toml --no-confirm-changeset --parameter-overrides environment=prod --tags createdBy='Nsanda'"
